{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types":["vitest/globals"],

    /* Linting */
    "strict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    /*mi configuracion*/
    "noImplicitAny": false,
  },
  "include": ["src/**/*.tsx", "src/**/*.ts", "src/components/Atomos/AtomCard/AtomCard.test.ts", "src/components/Atomos/AtomCard/AtomCard.test.ts", "src/components/Atomos/AtomCard/AtomCard.test.tsx"],
  "paths":{
    "@/*":["src/*"]
  },
  "references": [{ "path": "./tsconfig.node.json" }]
}
